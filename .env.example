# DATABASE設定 (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://koiki_user:koiki_password@db:5432/koiki_todo_db

# PostgreSQL設定
POSTGRES_SERVER=db
POSTGRES_USER=koiki_user
POSTGRES_PASSWORD=koiki_password
POSTGRES_DB=koiki_todo_db
POSTGRES_PORT=5432

# API設定
APP_ENV=development
DEBUG=True
SECRET_KEY=development_secret_key
API_V1_STR=/api/v1

# Redis設定 - シンプル版では無効化
REDIS_ENABLED=false
# REDIS_HOST=redis
# REDIS_PORT=6379

# JWT認証設定
JWT_SECRET=jwt_secret_development_only
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# ログ設定
LOG_LEVEL=INFO
LOG_FORMAT=json
