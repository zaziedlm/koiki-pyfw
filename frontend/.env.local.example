# Frontend Environment Configuration Template
# Copy this file to .env.local and customize the values for your environment

# API Configuration
# Backend API URL (adjust for your environment)
# Common values:
# - http://localhost:8000 (default local backend)  
# - http://localhost:3001 (alternative port)
# - http://192.168.1.100:8000 (remote development server)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Backend API prefix path (should match backend configuration)
# Default: /api/v1 (matches backend config.py)
NEXT_PUBLIC_API_PREFIX=/api/v1

# Full backend API base URL (usually API_URL + API_PREFIX)
# Can be overridden if backend uses different structure
NEXT_PUBLIC_API_BASE_URL=http://localhost:8000/api/v1

# Application Configuration
# Disable Next.js telemetry data collection
NEXT_TELEMETRY_DISABLED=1

# Environment (development, production, test)
NODE_ENV=development

# Security Configuration
# Enable/disable security headers (true for production)
NEXT_PUBLIC_ENABLE_SECURITY_HEADERS=true

# Authentication Configuration
# Token storage key prefix (customize if running multiple instances)
NEXT_PUBLIC_TOKEN_STORAGE_KEY=koiki_token

# UI Configuration
# Default theme (light, dark, system)
# Options: light | dark | system
NEXT_PUBLIC_DEFAULT_THEME=system

# Feature Flags
# Enable development tools (React Query DevTools, etc.)
NEXT_PUBLIC_ENABLE_DEV_TOOLS=true

# Debug Configuration
# Enable debug mode for development (set to true for detailed logging)
NEXT_PUBLIC_DEBUG=false

# API Timeout (milliseconds)
# Increase if backend is slow or on slow network
NEXT_PUBLIC_API_TIMEOUT=30000

# Application Metadata
# Customize these for your project
NEXT_PUBLIC_APP_NAME=KOIKI Framework Frontend
NEXT_PUBLIC_APP_VERSION=0.1.0